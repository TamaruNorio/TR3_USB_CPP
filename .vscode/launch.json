{
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Windows (MSVC): TR3_USB をデバッグ",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\tr3_usb.exe",
      "args": [],
      "cwd": "${workspaceFolder}",
      "console": "externalTerminal",               // ★対話入力のため外部コンソール
      "environment": [],
      "preLaunchTask": "Build TR3 (MSVC)"          // ★tasks.json のラベルと合わせる
    },
    {
      "name": "Windows (MinGW-gdb): TR3_USB をデバッグ",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}\\build\\tr3_usb.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": true,                     // ★対話入力のため true
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\mingw64_win32\\bin\\gdb.exe",  // ★ご環境に合わせる
      "setupCommands": [
        { "description": "Enable pretty-printing for gdb", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ],
      "environment": [],
      "preLaunchTask": "Build TR3 (MinGW)"         // ★tasks.json のラベルと合わせる
    }
  ]
}
